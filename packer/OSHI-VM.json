{
  "variables": {
    "alias": "willy",
    "disk_size": "40960",
    "distro": "ubuntu",
    "headless": "false",
    "iso_checksum": "fb4eef05edcabfc5cccd4cb44f3f9b48 ",
    "iso_checksum_type": "md5",
    "iso_url": "http://releases.ubuntu.com/15.10/ubuntu-15.10-server-amd64.iso",
    "shutdown_command": "sudo poweroff",
    "ssh_password": "user",
    "ssh_username": "user",
    "ssh_wait_timeout": "1h",
